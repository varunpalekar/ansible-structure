<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      https://maven.apache.org/xsd/settings-1.0.0.xsd">


  <pluginGroups>
    <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
  </pluginGroups>
  <profiles>
    <profile>
      <id>sonar</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <sonar.host.url>${env.SONAR_URL}</sonar.host.url>
        <sonar.login>${env.SONAR_LOGIN}</sonar.login>
      </properties>
    </profile>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <dist.repo.id>release</dist.repo.id>
        <dist.repo.name>Release</dist.repo.name>
        <dist.repo.url>https://repository.in/repository/maven-releases</dist.repo.url>
        <dist.snap_repo.id>snapshot</dist.snap_repo.id>
        <dist.snap_repo.name>Snapshots</dist.snap_repo.name>
        <dist.snap_repo.url>https://repository.in/repository/maven-snapshots/</dist.snap_repo.url>
      </properties>
    </profile>
    <profile>
      <id>jacoco</id>
      <activation>
        <activeByDefault>false</activeByDefault>  
        <property>
          <name>mavenVersion</name>
          <value>2.0.3</value>
        </property>
      </activation>
    </profile>
  </profiles>

  <mirrors>
    <mirror>
      <id>nitor_central</id>
      <name>Nitor Central</name>
      <url>https://repository.in/repository/maven-public/</url>
      <mirrorOf>central</mirrorOf>
    </mirror>
  </mirrors>
  
  <servers>
    <server>
      <id>release</id>
      <username>${env.RELEASE_USERNAME}</username>
      <password>${env.RELEASE_PASSWORD}</password>
    </server>
    <server>
      <id>snapshot</id>
      <username>${env.SNAPSHOT_USERNAME}</username>
      <password>${env.SNAPSHOT_PASSWORD}</password>
    </server>
  </servers>
</settings>